<window anim_hint="htranslate" name="home_page" theme="tab_top">
  <tab_button_group x="13" y="0" w="300" h="50" style="highlight" drag_child="false">
    <tab_button text="a"/>
    <tab_button text="b">
      <button x="r" y="b" w="20" h="30" text="x" name="close_button" on:click="close()"/>
