      <edit x="c" y="80" w="100" h="30" text="" />
      <button x="c" y="130" w="100" h="30" text="a" />
    </view>
    <view w="100%" h="100%" name="page2">
      <edit x="c" y="80" w="100" h="30" text="" />
      <button x="c" y="130" w="100" h="30" text="b" />
    </view>
    <view w="100%" h="100%" name="page3">
      <edit x="c" y="80" w="100" h="30" text="" />
      <button x="c" y="130" w="100" h="30" text="c" />
    </view>
    <view w="100%" h="100%" name="page4">
      <edit x="c" y="80" w="100" h="30" text="" />
      <button x="c" y="130" w="100" h="30" text="d" />
    </view>
  </pages>
</window>